rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // AI 창업 슬라이드 컬렉션 규칙
    match /ai-startup-slides/{slideId} {
      // 읽기: 모든 사용자 허용 (공개 프레젠테이션)
      allow read: if true;
      
      // 쓰기: 인증된 사용자만 허용 (편집 권한)
      // 개발 단계에서는 모든 사용자에게 쓰기 권한 부여
      allow write: if true;
      
      // 프로덕션에서는 아래 규칙 사용 권장:
      // allow write: if request.auth != null;
    }
    
    // 기타 컬렉션에 대한 기본 규칙
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
